<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dyel_logo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:src="@drawable/dyel_logo" />

    <TextView
        android:id="@+id/newLift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dyel_logo"
        android:layout_marginTop="10sp"
        android:text="Add new lift"
        android:textSize="24sp" />

    <Button
        android:id="@+id/add_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newLift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:text="+"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/chest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_food"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_lifts_gradient"
        android:text="Chest"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <Button
        android:id="@+id/arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/chest"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/chest"
        android:background="@drawable/background_lifts_border"
        android:text="Arms"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <Button
        android:id="@+id/legs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/arms"
        android:layout_alignTop="@id/arms"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="10dp"
        android:background="@drawable/background_lifts_border"
        android:textAllCaps="false"
        android:text="Legs"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/legs"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/legs"
        android:background="@drawable/background_lifts_border"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/recomendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chest"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:text="Based on your past performance you should try to bench press with:"
        android:textAlignment="center"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/peso"
        android:src="@drawable/baseline_fitness_center_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recomendation"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="55dp"/>

    <ImageView
        android:id="@+id/timer"
        android:src="@drawable/ic_baseline_timer_24"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/recomendation"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="55dp"/>

    <ImageView
        android:id="@+id/repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timer"
        android:layout_below="@id/recomendation"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="120sp"
        android:src="@drawable/ic_baseline_repeat_24" />

    <TextView
        android:id="@+id/kgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/peso"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:text="125kg"
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="8 reps"
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recomendation"
        android:layout_alignTop="@id/reps"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="75dp"
        android:layout_toRightOf="@id/reps"
        android:text="2 sets"
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kgs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:text="How many reps were you able to do for your 1st set?"
        android:textAlignment="center"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:hint="Set one reps"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:text="How many reps were you able to do for your 2nd set?"
        android:textAlignment="center"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:hint="Set two reps"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintVertical_bias="0.5" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_for_register"
        android:elevation="2dp"
        app:itemIconSize="20dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>
