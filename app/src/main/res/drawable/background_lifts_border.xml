<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set inside color as transparent -->
            <stroke
                android:width="2dp"
                android:color="#F37335"
                 /> <!-- Border color -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>

